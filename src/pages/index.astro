---
import "../styles/home.css";
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import MonogramDisplay from '../components/MonogramDisplay.astro';
import meditationIcon from '../assets/meditation-icon.svg?raw';
---

<BaseLayout>
	<Navigation />

	<main class="w-full max-w-md mx-auto px-4 pt-20 pb-16">
		<div class="monogram-section">
			<MonogramDisplay />
		</div>

		<div class="wayfinding-totem">
			<nav class="totem-nav" aria-label="Navegación principal">
				<div class="totem-header">
					<div class="wayfinding-link wayfinding-link-priority-1 wayfinding-link-active">
						<div class="wayfinding-content">
							<span class="wayfinding-label">Amet Alvirde</span>
							<span class="wayfinding-subtitle">Soy como tú</span>
						</div>
						<div class="wayfinding-icon" set:html={meditationIcon.replace('fill="#000000"', 'fill="currentColor"')}></div>
					</div>
				</div>

				<a href="/mind" class="wayfinding-link wayfinding-link-priority-2 wayfinding-link-open">
					<div class="wayfinding-content">
						<span class="wayfinding-label">TEXTOS</span>
						<span class="wayfinding-subtitle">Escribo para explorar mi consciencia</span>
					</div>
					<span class="wayfinding-indicator">
						<span class="wayfinding-arrow">→</span>
					</span>
				</a>
				
				<a href="#" class="wayfinding-link wayfinding-link-priority-3 wayfinding-link-disabled" aria-disabled="true">
					<div class="wayfinding-content">
						<span class="wayfinding-label">SOFTWARE</span>
						<span class="wayfinding-subtitle">Creo apps y herramientas</span>
					</div>
					<span class="wayfinding-status">PRONTO</span>
				</a>
				
				<a href="#" class="wayfinding-link wayfinding-link-priority-3 wayfinding-link-disabled" aria-disabled="true">
					<div class="wayfinding-content">
						<span class="wayfinding-label">Fotos</span>
						<span class="wayfinding-subtitle">Documento el mundo que me rodea</span>
					</div>
					<span class="wayfinding-status">PRONTO</span>
				</a>
				
				<a href="#" class="wayfinding-link wayfinding-link-priority-3 wayfinding-link-disabled" aria-disabled="true">
					<div class="wayfinding-content">
						<span class="wayfinding-label">VIDEOS</span>
						<span class="wayfinding-subtitle">Documento mi experiencia humana</span>
					</div>
					<span class="wayfinding-status">PRONTO</span>
				</a>
			</nav>
		</div>
	</main>
</BaseLayout>
